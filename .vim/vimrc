set encoding=utf-8
scriptencoding utf-8

set autoindent
set background=light
set backupcopy=yes
set belloff=all
set breakindent
set breakindentopt=list:-1,sbr,shift:2
set colorcolumn=+1
set comments+=fb:•
set commentstring=
set completeopt=menu,menuone,noselect
set cpoptions+=n
set expandtab
set fillchars=fold:·,foldopen:┌,foldclose:╓,foldsep:│,vert:│
set foldcolumn=1
set formatoptions+=nor
set hidden
set history=10000
set hlsearch
set ignorecase
set incsearch
set nojoinspaces
set linebreak
set list
set listchars=tab:›\ ,trail:•,extends:›,precedes:‹,nbsp:.
set nomodeline
set mouse=cnv
set number
set pumheight=10
set shiftwidth=2
set shortmess+=CFI shortmess-=S
set showbreak=+++\ 
set showcmd
set showtabline=2
set softtabstop=-1
set signcolumn=yes
set smartcase
set splitbelow
set splitright
set nostartofline
set statusline=\ [%n]\ %<%f\ %h%w%m%r%=%{&ff!='unix'?'['.&ff.']\ ':''}%-14.(%l,%c%V%)\ %(%L\ %)
set noswapfile
set switchbuf=uselast
set undofile
set updatetime=400
set wildmode=longest:full,full
set wildoptions=pum,tagfile

" The Vim that ships with MacOS only supports external diff. Therefore only
" set improved options when internal is present.
if &diffopt =~# 'internal'
  set diffopt+=algorithm:histogram,indent-heuristic,linematch:60
endif

" MacOS' Vim defaults regexpengine to the old engine in contrast to stock Vim
if &regexpengine ==# 1
  set regexpengine=0
endif

if has('nvim')
  set foldcolumn=auto:4
  set signcolumn=auto:2-4
else
  if exists('*mkdir')
    let &backupdir=simplify(fnamemodify($MYVIMRC, ':p:h') . '/backup')
    let &undodir=simplify(fnamemodify($MYVIMRC, ':p:h') . '/undo')

    if !isdirectory(&undodir)
      call mkdir(&undodir, 'p', 0700)
    endif

    if !isdirectory(&backupdir)
      call mkdir(&backupdir, 'p', 0700)
    endif
  endif

  " :help tmux-integration
  if !has('gui_running') && &term =~# '^\%(screen\|tmux\)'
    set ttymouse=sgr

    let &t_fe = "\<Esc>[?1004h"
    let &t_fd = "\<Esc>[?1004l"
    execute "set <FocusGained>=\<Esc>[I"
    execute "set <FocusLost>=\<Esc>[O"
  endif

  packadd! editorconfig
endif

if has('viminfo')
  let &viminfo=&viminfo . ',n' .
        \ simplify(fnamemodify($MYVIMRC, ':h') . '/info')
endif

if executable('rg')
  set grepformat=%f:%l:%c:%m
  set grepprg=rg\ --vimgrep\ -uu
else
  set grepformat=%f:%l:%m
  set grepprg=grep\ -InHR\ --exclude-dir=.git
endif

if has('autocmd')
  augroup vimrc_autocmd
    autocmd!

    " :help restore-cursor
    autocmd BufReadPost *
          \ let line = line("'\"")
          \ | if line >= 1 && line <= line("$") && &filetype !~# 'commit'
          \      && index(['xxd', 'gitrebase'], &filetype) == -1
          \ |   execute "normal! g`\""
          \ | endif
  augroup END
endif
