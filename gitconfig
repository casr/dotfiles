[alias]
	st = status
	co = checkout
	serve = "!f() { echo 'git clone git://[ip]/ project'; echo 'Slash is important!'; git daemon --reuseaddr --verbose --base-path=. --export-all ./.git; }; f"
	prlog = log --reverse develop..HEAD
	blr = branch -r --list
	bl = branch --list
	files = "!f() { git diff --name-status $(git merge-base HEAD $1) HEAD; }; f"
	diff-base = "!f() { git diff -w $(git merge-base HEAD $1) HEAD; }; f"
	branchdate = for-each-ref --sort='committerdate:iso8601' --format='%(align:width=40)%(refname:short)%(end)%(committerdate:relative)' refs/heads
	alias = config --get-regexp ^alias\\.
	plog = log --oneline --graph
[color]
	ui = true
[push]
	default = simple
[core]
	excludesfile = ~/.gitignore_global
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = true
	keepBackup = false
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[credential]
	helper = osxkeychain
