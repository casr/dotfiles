#!/bin/sh

PATH=${HOME}/bin:${PATH}
if command -v npm >/dev/null; then
	PATH=$(npm -g bin 2>/dev/null):${PATH}
fi
export PATH

EDITOR=vim
FCEDIT=${EDITOR}
export EDITOR FCEDIT

HISTCONTROL=ignoredups:ignorespace
HISTSIZE=5000
SAVEHIST=5000
HISTFILE=${HOME}/.sh_history
export HISTCONTROL HISTFILE HISTSIZE SAVEHIST
